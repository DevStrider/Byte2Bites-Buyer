<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/bb_page_background_blue"
    tools:context=".ProductDetailsActivity">

    <!-- Top bar with back -->
    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:padding="4dp"
        android:src="@drawable/ic_arrow_back"
        app:tint="@color/bb_primary_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Product image inside a card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="16dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/ivBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="16:9">

        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_profile_placeholder" />

    </com.google.android.material.card.MaterialCardView>

    <!-- Product name -->
    <TextView
        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Product name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary_dark"
        app:layout_constraintTop_toBottomOf="@id/cardImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Product price -->
    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="$24.99"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/bb_primary_blue"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Description (takes space between price and bottom card) -->
    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        android:text="Description of the product goes here. Ingredients, notes, etc."
        android:textColor="@color/text_secondary_dark"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvPrice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/actionCard" />

    <!-- Bottom action card: Add to cart OR quantity controls -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/actionCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="0dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="20dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@color/bb_surface"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <!-- Small label above button -->

            <!-- Primary button: shown when quantity = 0 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddToCart"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:text="Add to cart"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textColor="@color/bb_on_primary"
                app:cornerRadius="24dp"
                app:backgroundTint="@color/bb_primary_blue"
                app:icon="@drawable/ic_cart"
                app:iconGravity="textStart"
                app:iconPadding="8dp" />

            <!-- Quantity controls: shown when quantity > 0 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/qtyContainer"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/bb_primary_blue"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnMinus"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="-"
                        android:textSize="18sp"
                        android:textAllCaps="false"
                        android:minWidth="0dp"
                        android:padding="0dp"
                        app:cornerRadius="20dp"
                        app:backgroundTint="@android:color/transparent" />

                    <TextView
                        android:id="@+id/tvQuantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="24dp"
                        android:text="1"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary_dark" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnPlus"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="+"
                        android:textSize="18sp"
                        android:textAllCaps="false"
                        android:minWidth="0dp"
                        android:padding="0dp"
                        app:cornerRadius="20dp"
                        app:backgroundTint="@android:color/transparent" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
