<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Top row: Order id + status -->
        <TextView
            android:id="@+id/tvOrderId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Order #123456"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/bb_primary_blue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvStatus"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintHorizontal_chainStyle="packed" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preparing"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/bb_gold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Time (relative or date) -->
        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Just now"
            android:textSize="12sp"
            android:textColor="@color/text_secondary_dark"
            app:layout_constraintStart_toStartOf="@id/tvOrderId"
            app:layout_constraintTop_toBottomOf="@id/tvOrderId"
            android:layout_marginTop="2dp"/>

        <!-- Items summary -->
        <TextView
            android:id="@+id/tvItems"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="2 × Burger\n1 × Fries"
            android:textSize="13sp"
            android:textColor="@color/text_primary_dark"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTime"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Total -->
        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total: $120.00"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/bb_primary_blue"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@id/tvItems"
            app:layout_constraintTop_toBottomOf="@id/tvItems" />

        <!-- Call restaurant button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCallRestaurant"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginTop="8dp"
            android:text="Call restaurant"
            android:textAllCaps="false"
            android:textSize="13sp"
            android:textColor="@color/bb_primary_blue"
            app:strokeColor="@color/bb_primary_blue"
            app:strokeWidth="1dp"
            app:icon="@drawable/ic_orders"
            app:iconGravity="textStart"
            app:iconPadding="6dp"
            app:layout_constraintTop_toBottomOf="@id/tvItems"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
