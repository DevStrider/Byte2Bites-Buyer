<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bb_page_background_blue"
    tools:context=".ProfileFragment">

    <!-- Scrollable profile content -->
    <ScrollView
        android:id="@+id/scrollProfile"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
            android:paddingHorizontal="24dp">

            <!-- Profile picture -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivProfilePicture"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_profile_placeholder"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full" />

            <!-- Name -->
            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:textColor="@color/text_primary_dark"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="Abdelrahman Mansour" />

            <!-- Email -->
            <TextView
                android:id="@+id/tvUserEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:textColor="@color/text_secondary_dark"
                android:textSize="16sp"
                tools:text="user@example.com" />

            <!-- Points and Credit Display -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvPoints"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Points: 0"
                    android:textColor="@color/text_primary_dark"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tvCredit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Credit: $0.00"
                    android:textColor="@color/bb_primary_blue"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Menu items -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="32dp">

                <!-- Convert Points to Credit -->
                <RelativeLayout
                    android:id="@+id/cardConvertPoints"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/profile_menu_item_background"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingHorizontal="20dp"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_credit"
                        android:layout_centerVertical="true"
                        app:tint="@color/bb_primary_blue" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Convert Points to Credit"
                        android:layout_marginStart="48dp"
                        android:layout_centerVertical="true"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary_dark" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_forward"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        app:tint="@color/text_secondary_dark" />
                </RelativeLayout>

                <!-- Update username & phone -->
                <RelativeLayout
                    android:id="@+id/cardChangeUsername"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/profile_menu_item_background"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingHorizontal="20dp"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_edit"
                        android:layout_centerVertical="true"
                        app:tint="@color/bb_primary_blue" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Update Username &amp; Phone"
                        android:layout_marginStart="48dp"
                        android:layout_centerVertical="true"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary_dark" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_forward"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        app:tint="@color/text_secondary_dark" />
                </RelativeLayout>

                <!-- Addresses -->
                <RelativeLayout
                    android:id="@+id/cardAddresses"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/profile_menu_item_background"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingHorizontal="20dp"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_location"
                        android:layout_centerVertical="true"
                        app:tint="@color/bb_primary_blue" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My Addresses"
                        android:layout_marginStart="48dp"
                        android:layout_centerVertical="true"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary_dark" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_forward"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        app:tint="@color/text_secondary_dark" />
                </RelativeLayout>

                <!-- Change password -->
                <RelativeLayout
                    android:id="@+id/cardChangePassword"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/profile_menu_item_background"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingHorizontal="20dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_lock"
                        android:layout_centerVertical="true"
                        app:tint="@color/bb_primary_blue" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Change Password"
                        android:layout_marginStart="48dp"
                        android:layout_centerVertical="true"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary_dark" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_forward"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        app:tint="@color/text_secondary_dark" />
                </RelativeLayout>

            </LinearLayout>

            <!-- Logout button -->
            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="32dp"
                android:text="Logout"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:backgroundTint="@color/bb_error" />

            <!-- Delete account -->
            <TextView
                android:id="@+id/tvDeleteAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete Account"
                android:textColor="@color/text_secondary_dark"
                android:layout_gravity="center_horizontal"
                android:textSize="16sp"
                android:padding="16dp"
                android:layout_marginTop="8dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>