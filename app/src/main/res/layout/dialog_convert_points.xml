<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvAvailablePoints"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Available Points: 0"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Points to Convert (5 points = EÂ£1)"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etPointsToConvert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Enter points (multiples of 5)"
        android:layout_marginBottom="16dp" />

    <SeekBar
        android:id="@+id/seekBarPoints"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tvCreditAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Credit: $0.00"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/bb_primary_blue"
        android:gravity="center" />

</LinearLayout>